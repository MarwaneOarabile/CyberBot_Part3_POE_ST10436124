<Window x:Class="CyberBotPart3.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBotPart3"
        mc:Ignorable="d"
        Title="CyberBot - Welcome" Height="500" Width="800"
        Background="#1E1E2F"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <!-- Faint background image -->
        <Image Source="/cyber-security-logo.jpg"
               Stretch="UniformToFill"
               Opacity="0.05"
               Panel.ZIndex="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <!-- OutputBox styled as terminal -->
        <Border Background="#22243A"
                CornerRadius="8"
                BorderBrush="#444"
                BorderThickness="1"
                Margin="20,20,20,100"
                Panel.ZIndex="1">
            <TextBox x:Name="outputBox"
                     Background="Transparent"
                     Foreground="White"
                     FontFamily="Consolas"
                     FontSize="14"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     BorderThickness="0"
                     VerticalScrollBarVisibility="Auto"/>
        </Border>

        <Button x:Name="startBtn"
        Content="Start Chat"
        Width="150"
        Height="45"
        FontSize="14"
        FontWeight="SemiBold"
        IsEnabled="False"
        Click="startBtn_Click"
        HorizontalAlignment="Left"
        Margin="100,0,0,30"
        VerticalAlignment="Bottom"
        Background="#2D89EF"
        Foreground="White"
        BorderBrush="#2D89EF"
        Cursor="Hand"
        BorderThickness="0"
        Panel.ZIndex="2"/>

        <Button Content="Exit"
        Width="150"
        Height="45"
        FontSize="14"
        FontWeight="SemiBold"
        Click="Exit_Click"
        HorizontalAlignment="Right"
        Margin="0,0,100,30"
        VerticalAlignment="Bottom"
        Background="#EF3C3C"
        Foreground="White"
        BorderBrush="#EF3C3C"
        Cursor="Hand"
        BorderThickness="0"
        Panel.ZIndex="2"/>

    </Grid>
</Window>
