<Window x:Class="CyberBotPart3.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBotPart3"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="450" Width="800">
    <Grid>
        <Image Margin="10,10,10,10" Source="/cyber-security-logo.jpg" Stretch="Fill" Opacity="0.2" />

        <Button x:Name="startBtn" Content="Start Chat" HorizontalAlignment="Left" Margin="115,358,0,0" VerticalAlignment="Top" Height="47" Width="136" IsEnabled="False" Click="startBtn_Click"/>
        <Button Content="Exit Application" HorizontalAlignment="Left" Margin="551,358,0,0" VerticalAlignment="Top" Height="47" Width="136" Click="Exit_Click"/>
        <Button Content="FAQ" HorizontalAlignment="Left" Margin="10,372,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="outputBox" Margin="10,10,10,81"   FontFamily="Consolas" FontSize="12"  IsReadOnly="True" TextWrapping="NoWrap"/>
    </Grid>
</Window>
