<Window x:Class="CyberBotPart3.cyberMinigameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBotPart3"
        mc:Ignorable="d"
        Title="Cybersecurity Mini-Game"
        Height="500" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F">

    <Grid Margin="20">
        <!-- Title -->
        <TextBox IsReadOnly="True"
                 Text=" Cybersecurity Mini-Game"
                 FontSize="20"
                 FontWeight="Bold"
                 Foreground="White"
                 Background="Transparent"
                 BorderThickness="0"
                 Margin="0,0,0,10"/>

        <!-- Question Label -->
        <Label Content="Question:"
               FontWeight="Bold"
               Foreground="White"
               Margin="0,50,0,0"/>

        <TextBox x:Name="questionTxtbx"
                 Margin="80,50,0,0"
                 Width="660"
                 Height="30"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap"
                 FontSize="14"
                 Background="WhiteSmoke"
                 BorderBrush="#444"/>

        <!-- Answer Options -->
        <!-- Option A -->
        <RadioButton x:Name="optionA_RadioBtn"
                     Content="A"
                     Foreground="White"
                     Margin="10,100,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"/>
        <TextBox x:Name="answerATxtBx"
                 Margin="80,98,0,0"
                 Width="660"
                 Height="28"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Background="WhiteSmoke"
                 BorderBrush="#444"
                 FontSize="13"/>

        <!-- Option B -->
        <RadioButton x:Name="optionB_RadioBtn"
                     Content="B"
                     Foreground="White"
                     Margin="10,140,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"/>
        <TextBox x:Name="answerBTxtBx"
                 Margin="80,138,0,0"
                 Width="660"
                 Height="28"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Background="WhiteSmoke"
                 BorderBrush="#444"
                 FontSize="13"/>

        <!-- Option C -->
        <RadioButton x:Name="optionC_RadioBtn"
                     Content="C"
                     Foreground="White"
                     Margin="10,180,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"/>
        <TextBox x:Name="answerCTxtBx"
                 Margin="80,178,0,0"
                 Width="660"
                 Height="28"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Background="WhiteSmoke"
                 BorderBrush="#444"
                 FontSize="13"/>

        <!-- Option D -->
        <RadioButton x:Name="optionD_RadioBtn"
                     Content="D"
                     Foreground="White"
                     Margin="10,220,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"/>
        <TextBox x:Name="answerDTxtBx"
                 Margin="80,218,0,0"
                 Width="660"
                 Height="28"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Background="WhiteSmoke"
                 BorderBrush="#444"
                 FontSize="13"/>

        <!-- Submit / Next Buttons -->
        <Button x:Name="submitBtn"
                Content="✔ Submit"
                Width="120"
                Height="35"
                Margin="80,260,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Background="#2D89EF"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="SubmitAnswer_Click"/>

        <Button x:Name="nextQuestionBtn"
                Content="➡ Next"
                Width="120"
                Height="35"
                Margin="220,260,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Background="#28A745"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="NextQuestionBtn_Click"
                Visibility="Collapsed"/>

        <!-- RichTextBox Result Area -->
        <RichTextBox x:Name="resultsRichTxtBx"
                     Margin="10,310,270,10"
                     FontSize="14"
                     Foreground="White"
                     Background="#2F2F3B"
                     BorderThickness="1"
                     BorderBrush="#555"/>

        <!-- Back to Chat Button -->
        <Button x:Name="backToChatBtn"
                Content="⬅ Back to Chat"
                Width="150"
                Height="35"
                Margin="620,310,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Background="#EF3C3C"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="BackToChatBtn_Click"/>

        <!-- Dummy radio for logic -->
        <RadioButton x:Name="dummyRadioBtn"
                     Visibility="Collapsed"
                     IsChecked="True"/>
    </Grid>
</Window>
