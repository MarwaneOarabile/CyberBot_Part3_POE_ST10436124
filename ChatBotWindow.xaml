<Window x:Class="CyberBotPart3.ChatBotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBotPart3"
        mc:Ignorable="d"
        Title="ChatBotWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="userInputTxt" HorizontalAlignment="Left" Margin="10,385,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="635" Height="39" TextChanged="TextBox_TextChanged"/>
        <Image x:Name="cyberImage" Margin="651,10,10,319" Source="/cyber-security-logo.jpg" Stretch="Fill"/>
        <Button x:Name="submitBtn" Content="submit" HorizontalAlignment="Left" Margin="660,385,0,0" VerticalAlignment="Top" Height="39" Width="95" Click="Button_Click_1"/>
        <Label x:Name="cyberBotTitleLbl" Content="CyberBot the best cybersecurity chatbot!" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="48" Width="615"/>
        <Button x:Name="activityLogBtn" Content="Activity Log" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Height="57" Width="117"/>
        <Button x:Name="minigameBtn" Content="Cyber-security&#xD;&#xA; Mini games" HorizontalAlignment="Left" Margin="171,63,0,0" VerticalAlignment="Top" Height="57" Width="117"/>
        <Button Content="Task Manager" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" Height="57" Width="116" Click="Button_Click_2"/>
        <Button x:Name="exitBtn" Content="Exit" HorizontalAlignment="Left" Margin="508,63,0,0" VerticalAlignment="Top" Height="57" Width="117" RenderTransformOrigin="1.48,0.685"/>
        <RichTextBox x:Name="ConversationHolderRichTxtBx" HorizontalAlignment="Center" Height="247" Margin="0,125,0,0" VerticalAlignment="Top" Width="780">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
