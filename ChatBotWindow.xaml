<Window x:Class="CyberBotPart3.ChatBotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBotPart3"
        mc:Ignorable="d"
        Title="CyberBot Chat"
        Height="500" Width="800"
        Background="#1E1E2F"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Chat Title -->
        <Label x:Name="cyberBotTitleLbl"
               Content=" CyberBot — Your Cybersecurity Assistant"
               HorizontalAlignment="Left"
               Margin="10,10,0,0"
               VerticalAlignment="Top"
               Height="48"
               Width="620"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"
               Background="Transparent"/>

        <!-- Activity Log Button -->
        <Button x:Name="activityLogBtn"
                Content="📜 Activity Log"
                HorizontalAlignment="Left"
                Margin="21,63,0,0"
                VerticalAlignment="Top"
                Height="40"
                Width="117"
                Click="activityLogBtn_Click"
                Background="#2D89EF"
                Foreground="White"
                BorderBrush="#2D89EF"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand"/>

        <!-- Mini Game Button -->
        <Button x:Name="minigameBtn"
                Content="🎮 Mini Game"
                HorizontalAlignment="Left"
                Margin="161,63,0,0"
                VerticalAlignment="Top"
                Height="40"
                Width="117"
                Click="minigameBtn_Click"
                Background="#28A745"
                Foreground="White"
                BorderBrush="#28A745"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand"/>

        <!-- View Tasks Button -->
        <Button x:Name="taskManagerBtn"
                Content="📋 View Tasks"
                HorizontalAlignment="Left"
                Margin="301,63,0,0"
                VerticalAlignment="Top"
                Height="40"
                Width="117"
                Click="taskManagerBtn_Click"
                Background="#F0AD4E"
                Foreground="White"
                BorderBrush="#F0AD4E"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand"/>

        <!-- Exit Button -->
        <Button x:Name="exitBtn"
                Content="❌ Exit"
                HorizontalAlignment="Left"
                Margin="441,63,0,0"
                VerticalAlignment="Top"
                Height="40"
                Width="117"
                Click="exitBtn_Click"
                Background="#EF3C3C"
                Foreground="White"
                BorderBrush="#EF3C3C"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand"/>

        <!-- Chat Output (RichTextBox) -->
        <RichTextBox x:Name="ConversationHolderTxtBx"
             Margin="10,115,170,80"
             FontFamily="Consolas"
             FontSize="14"
             Background="WhiteSmoke"
             Foreground="Black"
             BorderBrush="#888"
             BorderThickness="1"
             IsReadOnly="True"
             VerticalScrollBarVisibility="Auto"/>


        <!-- User Input Box -->
        <TextBox x:Name="userInputTxt"
                 HorizontalAlignment="Left"
                 Margin="10,0,0,20"
                 VerticalAlignment="Bottom"
                 Width="635"
                 Height="35"
                 FontSize="14"
                 Background="WhiteSmoke"
                 BorderBrush="#888"
                 BorderThickness="1"
                 TextWrapping="Wrap"/>

        <!-- Submit Button -->
        <Button x:Name="submitBtn"
                Content="➡ Send"
                HorizontalAlignment="Left"
                Margin="660,0,0,20"
                VerticalAlignment="Bottom"
                Height="35"
                Width="95"
                Click="submitBtn_Click"
                Background="#2D89EF"
                Foreground="White"
                BorderBrush="#2D89EF"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"/>

        <!-- Logo -->
        <Image x:Name="cyberImage"
               Margin="635,10,10,319"
               Source="/cyber-security-logo.jpg"
               Stretch="Fill"
               />
    </Grid>
</Window>
